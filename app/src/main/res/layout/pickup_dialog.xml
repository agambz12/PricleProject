<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:background="@drawable/pickupdialog"
    android:layout_height="match_parent">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create a New Request"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="10sp"
        android:textSize="30sp"
        android:fontFamily="serif"/>

    <ImageButton
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginLeft="-20dp"
        android:id="@+id/btbackpickup"
        android:background="@drawable/arrowdialog" />


    <EditText
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:id="@+id/etnamepickup"
        android:layout_marginLeft="10dp"
        android:padding="5dp"
        android:layout_marginTop="70dp"
        android:drawableRight="@drawable/pen"
        android:textColorHint="@color/black"
        android:hint="Full Name"/>

    <EditText
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:id="@+id/etaddresspickup"
        android:padding="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="120dp"
        android:drawableRight="@drawable/pen"
        android:textColorHint="@color/black"
        android:hint="Address"/>

    <EditText
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:id="@+id/etnumberaddpickup"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="170dp"
        android:padding="5dp"
        android:drawableRight="@drawable/pen"
        android:textColorHint="@color/black"
        android:hint="Contact Number"/>

    <Button
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:id="@+id/timeButton"
        android:onClick="PopTimePicker"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="220dp"
        android:textSize="17sp"
        android:padding="5dp"
        android:backgroundTint="@color/cardview_shadow_start_color"
        android:textColorHint="@color/black"
        android:hint="Select Hour"
        android:drawableRight="@drawable/clock"
        />

    <TextView
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:id="@+id/selectBin"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="270dp"
        android:padding="5dp"
        android:drawableEnd="@drawable/arrowselect"
        android:textColorHint="@color/black"
        android:background="@android:drawable/editbox_background"
        android:hint="Select Recycle bin"/>



    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/sendicon2"
        android:layout_marginTop="340dp"
        android:id="@+id/sendpickup"/>
    

</RelativeLayout>