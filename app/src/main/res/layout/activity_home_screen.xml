<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/homefidpic2"
    android:orientation="vertical"
    tools:context=".HomeScreenActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Recycle Bin"
        android:textStyle="bold"
        android:fontFamily="serif"
        android:textSize="20sp"
        android:textColor="@color/black"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/btpaper"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_marginTop="50dp"
            android:layout_weight="1"
            android:background="@drawable/blue"
            android:contentDescription="@string/todo"
            tools:ignore="RtlHardcoded" />

        <ImageButton
            android:id="@+id/btpackaging"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_marginTop="50dp"
            android:layout_weight="1"
            android:background="@drawable/orange"
            android:contentDescription="@string/todo"
            tools:ignore="RtlHardcoded" />

        <ImageButton
            android:id="@+id/btglass"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_marginTop="50dp"
            android:layout_weight="1"
            android:background="@drawable/purple"
            android:contentDescription="@string/todo"
            tools:ignore="RtlHardcoded" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <Button
        android:id="@+id/btpickup"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_gravity="bottom"
        android:backgroundTint="@color/green"
        android:fontFamily="serif"
        android:text="Create a pick up request"
        android:textSize="25dp" />

    <Button
        android:id="@+id/create_recycle_bin"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_gravity="bottom"
        android:backgroundTint="@color/green"
        android:fontFamily="serif"
        android:text="@string/create_reyclerbin"
        android:textSize="25dp" />


</LinearLayout>
    




