<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/orangedialog"
    android:layout_height="match_parent">

    <ImageButton
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="30dp"
        android:id="@+id/btbackpackaging"
        android:background="@drawable/arrowdialog" />

    <ImageButton
        android:layout_width="180dp"
        android:layout_height="90dp"
        android:id="@+id/btGoPackaging"
        android:background="@drawable/gobutton"
        android:layout_marginTop="640dp"
        android:layout_marginLeft="40dp"/>

    <Button
        android:id="@+id/speakPackagingButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Speak" />


</LinearLayout>